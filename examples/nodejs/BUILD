package(default_visibility = ["//visibility:public"])

load("@io_bazel_rules_docker//docker:docker.bzl", "docker_build")

# These examples are adapted from:
# https://howtonode.org/hello-node
docker_build(
    name = "hello",
    base = "//nodejs:nodejs",
    cmd = ["hello.js"],
    files = [":hello.js"],
)

docker_build(
    name = "hello_http",
    base = "//nodejs:nodejs",
    cmd = ["hello_http.js"],
    files = [":hello_http.js"],
    ports = ["8000"],
)

load("@runtimes_common//structure_tests:tests.bzl", "structure_test")

structure_test(
    name = "hello_test",
    config = "testdata/hello.yaml",
    image = ":hello",
)

docker_build(
    name = "hello_express",
    base = "//nodejs:nodejs",
    cmd = ["hello_express.js"],
    files = [":hello_express.js", ":node_modules"],
    ports = ["8000"],
)